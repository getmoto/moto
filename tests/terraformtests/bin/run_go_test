#!/bin/bash

pwd=$PWD

(
cd terraform-provider-aws || exit
echo "Patching the terraform-provider-aws directory..."
PATCH="etc/0001-Patch-Hardcode-endpoints-to-local-server.patch"
git apply $pwd/${PATCH}
)

(
cd terraform-provider-aws || exit
AWS_ACCESS_KEY_ID=test AWS_SECRET_ACCESS_KEY=test TF_ACC=true go test ./internal/service/$1/ -v -timeout 1200s -run $2
)
