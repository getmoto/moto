{
  "name": "moto",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "root",
  "remoteEnv": {
    "PATH": "/.venv/bin:${containerEnv:PATH}"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": ["ms-vscode.makefile-tools", "ms-python.python"]
    }
  },
  "postCreateCommand": "make init"
}
